#!/usr/bin/env bash
if [ $BASH_VERSINFO -lt 4 ]; then
    # sLow mode
    l=1
else
    declare -A C
    l=0
fi
echo '{Â "aliasToKeys": ['
a=''
grep ^group ~/.gnupg/gpg.conf | grep -v '<' | while read g; do
    n=$(echo $g|cut -d= -f1|cut -d' ' -f2)
    m=$(echo $g|cut -d= -f2)
    echo $a'{ "alias": "'$n'", "rules": { "info": "email rule", "keys": ['
    a=','
    b=''
    for k in $(echo $m); do
        if [ $l = 0 ]; then
            if [ ${C[$k]+_} ]; then
                r=${C[$k]}
            else
                r=$(gpg-key-resolve $k)
                C[$k]=$r            
            fi
        else
            r=$(gpg-key-resolve $k)
        fi
        echo $b'"'$r'"'
        b=','
    done
    echo '], "ignoreFailures": false } }' 
done
echo '] }'
